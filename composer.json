{
    "name": "shopware-ag/cli-tools",
    "type": "application",
    "license": "MIT",
    "require": {
        "php": ">=5.3.2",
        "ext-curl": "*",
        "symfony/console": "~2.5",
        "symfony/yaml": "~2.5",
        "symfony/process": "~2.5",
        "symfony/dependency-injection": "~2.5"
    },
    "require-dev": {
        "ext-phar":  "*",
        "phpunit/phpunit": "@stable",
        "squizlabs/php_codesniffer": "2.0.*@ALPHA"

    },
    "scripts": {
        "post-install-cmd": "ln -sf ../../hooks/pre-commit .git/hooks/pre-commit",
        "post-update-cmd": "ln -sf ../../hooks/pre-commit .git/hooks/pre-commit"
    },
    "autoload": {
        "psr-4": {
            "ShopwareCli\\": "src/"
        }
    },
    "bin": ["bin/sw"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
